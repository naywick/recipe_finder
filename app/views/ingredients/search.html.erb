<%= form_tag(search_path, :method => "get") do %>
  <%= label_tag(:search, "Which ingredient?")%>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search", :name => nil) %>
<% end %>

<h1>Matching Recipes</h1>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <a href="/recipes/<%= recipe.id %>">
        <%= recipe.title %>
      </a>
    </li>
  <% end%>
</ul>
